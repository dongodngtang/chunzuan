/* pages/channel.wxss */

.channel{
   display: flex;
   align-items: center;
   margin-top: 20px;
}

.avatar{
  height: 76px;
  width: 76px;
  border-radius: 38px;
  margin-left: 15px;
  margin-right: 15px;
  background: #ECEFF2;
}

.txt-name{
  font-size: 15px;
  color: #333
}

.item{
   display: flex;
   align-items: center;
   border-bottom-color: #ECEFF2;
   border-bottom-width: 1px;
   border-bottom-style: solid;
   padding-top: 15px;
   padding-bottom: 15px;
}

.btn-share{
  width: 100%;
  background: #ea576a;
  color: white;
  border-radius: 0;
  position: fixed;
  bottom: 0;
}

