.channel{
   display: flex;
   align-items: center;
   margin-top: 20px;
}

.avatar{
  height: 76px;
  width: 76px;
  border-radius: 38px;
  margin-left: 15px;
  margin-right: 15px;
}

.txt-name{
  font-size: 15px;
  color: #333
}

.item{
   height: 40px;
   display: flex;
   align-items: center;
   border-bottom-color: #ECEFF2;
   border-bottom-width: 1px;
   border-bottom-style: solid;
   
}

.btn-share{
  width: 90%;
  background: #ea576a;
  margin-top: 60px;
  color: white;
  border-radius: 2px;
}